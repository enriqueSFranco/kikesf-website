---
import hero from '../assets/images/me.jpeg';
import iconGithub from '../assets/icons/github.svg';
import iconLinkedin from '../assets/icons/linkedin.svg';
import data from '../api/data.json';

const skills = data.skills;
---

<section id='home' class='w-full min-h-screen flex justify-center items-center'>
	<div class='w-2/3 flex justify-between items-center'>
		<div class='flex flex-col gap-3'>
			<p class='text-5xl font-extrabold tracking-wide'>
				Enrique Salinas Franco <span
					class='animate-say inline-block origin-center'>👋🏼</span
				>
			</p>
			<p
				class='font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-pink-400 to-red-600 tracking-wide'>
			</p>
			<div class='flex flex-col gap-10'>
				<p class='text-xl tracking-wide leading-8'>
					Soy Ingeniero en Sistemas Computaciones y me gusta desarrollar
					aplicaciones web.
				</p>
				<ul class='flex justify-start items-center gap-6'>
					{
						skills.map((skill) => (
							<li>
								<figure class='grid place-items-center gap-2'>
									<img
										src={`../../public/${skill}.svg`}
										alt={`skill-${skill}`}
										width='36'
									/>
									<figcaption>
										<span>{skill}</span>
									</figcaption>
								</figure>
							</li>
						))
					}
				</ul>
				<ul class='flex items-center gap-5 [&>li>a]:rounded-md'>
					<li>
						<div
							class='bg-gradient-to-tr from-green-300 via-blue-500 to-purple-600 p-0.5 rounded-md h-12 w-full'>
							<a
								href='https://github.com/enriqueSFranco'
								target='_blank'
								class='flex items-center rounded-md px-2 gap-4 h-full w-full bg-black transition-colors duration-300 ease-in-out hover:bg-white/20'
								><img
									src={iconGithub}
									alt='enriqueSFranco'
									width='26'
								/>enriqueSFranco</a
							>
						</div>
					</li>
					<li>
						<div
							class='bg-gradient-to-tr from-green-300 via-blue-500 to-purple-600 p-0.5 rounded-md h-12 w-full'>
							<a
								href='https://www.linkedin.com/in/enrique-sfranco/'
								target='_blank'
								class='flex items-center gap-4 rounded-md px-2 h-full w-full bg-black transition-colors duration-300 ease-in-out hover:bg-white/20'
								><img
									src={iconLinkedin}
									alt='enriqueSFranco'
									width='26'
								/>enriqueSFranco</a
							>
						</div>
					</li>
				</ul>
			</div>
		</div>
		<div class='w-72 h-64 rounded-full overflow-hidden'>
			<img src={hero} alt='kike sf' class='object-contain max-w-full h-auto' />
		</div>
	</div>
</section>
