---
import Menu from "./Menu.astro";
import menuIcon from "/icons/menu-hamburger.svg";
---

<script>
  import { togglePanel } from "../script/togglePanel";
  const $panel = document.getElementById("panel");

  if ($panel instanceof HTMLElement) {
    togglePanel($panel, "#btn-open");
  }
</script>

<header
  id='primary-header'
  class='min-w-full h-16 flex justify-between items-center px-4 sticky top-0 bg-black/5 backdrop-blur-sm z-20'
>
  <h1
    class='text-3xl lg:text-4xl font-semibold text-transparent bg-clip-text bg-gradient-to-tr from-green-400 to-blue-600 capitalize tracking-wide'
  >
    kike
  </h1>
  <button id='btn-open' aria-label='button open menu' class='lg:hidden'>
    <img src={menuIcon} alt='menu hamburger icon' />
  </button>
  <Menu />
</header>
