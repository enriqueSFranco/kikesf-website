---
interface Props {
  icon: string;
  url: string;
}

const { icon, url } = Astro.props;
---

<a
  href={url}
  target='_blank'
  class='bg-black cursor-pointer flex items-center justify-between gap-2 rounded-md h-12 w-40 xl:w-40 text-sm font-light px-3 py-2 transition-colors duration-300 ease-in-out hover:bg-white/10'
>
  <img src={icon} alt='enriqueSFranco' class='w-5 xl:w-6' />
  enriqueSFranco
</a>
