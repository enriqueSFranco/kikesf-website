---
import { MENU } from '../share/consts';
import ItemMenu from './ItemMenu.astro';
import closeIcon from '/icons/close.svg';
---

<script>
	const $panel = document.getElementById('panel');
	const $btnClose = document.getElementById('btn-close');
</script>

<aside
	id='panel'
	class='w-1/2 h-screen bg-black fixed top-0 -right-full z-10 transition-all duration-200 ease-in'>
	<header class='flex justify-end h-16'>
		<button id='btn-close' class='px-4' aria-label='button close menu'>
			<img src={closeIcon} alt='close icon' />
		</button>
	</header>
	<nav class='h-16 w-full' id='menu'>
		<ul class='flex flex-col items-start h-full text-white' id='menu'>
			{
				MENU.map((item) => {
					return <ItemMenu item={item} />;
				})
			}
		</ul>
		<div
			id='indicator'
			class='absolute bg-white/20 opacity-0 backdrop-blur-lg -z-10 rounded-md left-[var(--left)] top-[var(--top)] w-[var(--width)] h-[var(--height)] transition-all duration-300 ease-in-out'>
		</div>
	</nav>
</aside>
