---
import type { Project } from "@/share/types.d";

interface Props {
  project: {
    id: number;
    name: string;
    description: string;
    highlights: string[];
  };
}

const { project } = Astro.props;
---

<li>
  <article class='flex flex-col overflow-hidden font-light leading-normal'>
    <h2 class='font-bold'>{project.name}</h2>
    <p class='text-sm mb-2'>{project.description}</p>
    <ul class='list-disc space-y-1 list-inside dark:text-gray-300/80'>
      {project.highlights.map((highlight: string) => <li>{highlight}</li>)}
    </ul>
  </article>
</li>
