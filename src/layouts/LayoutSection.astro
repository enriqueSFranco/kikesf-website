---
export interface Props {
	sectionTitle: string;
	sectionId: string;
}

const { sectionTitle, sectionId } = Astro.props;
---

<section
	class='min-h-screen w-full p-8 flex flex-col justify-center xl:items-center gap-6'
	id={sectionId}
>
	<header class='h-10'>
		<h2
			class='xl:text-4xl text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-rose-400 via-fuchsia-500 to-indigo-500 capitalize tracking-wide'
		>
			{sectionTitle}
		</h2>
	</header>
	<slot />
</section>
