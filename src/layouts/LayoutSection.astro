---
export interface Props {
	sectionTitle: string;
	sectionId: string;
}

const { sectionTitle, sectionId } = Astro.props;
---

<section class='min-h-screen' id={sectionId}>
	<h2
		class='text-3xl capitalize tracking-wide font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500'>
		{sectionTitle}
	</h2>
</section>
