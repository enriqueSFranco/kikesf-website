---
export interface Props {
	sectionTitle: string;
	sectionId: string;
}

const { sectionTitle, sectionId } = Astro.props;
---

<section class='min-h-screen p-4 flex flex-col gap-6' id={sectionId}>
	<h2
		class='text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 capitalize tracking-wide'>
		{sectionTitle}
	</h2>
	<slot />
</section>
