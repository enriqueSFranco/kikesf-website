---
export interface Props {
	sectionTitle: string;
	sectionId: string;
}

const { sectionTitle, sectionId } = Astro.props;
---

<section class='min-h-screen w-full p-8 flex flex-col justify-center items-center gap-6' id={sectionId}>
	<h2
		class='text-4xl max-sm:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-rose-400 via-fuchsia-500 to-indigo-500 capitalize tracking-wide'>
		{sectionTitle}
	</h2>
	<slot />
</section>
